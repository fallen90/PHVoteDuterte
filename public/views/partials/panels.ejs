<div class="rows">
    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4" id="step1">
        <div class="panel panel-default card">
            <div class="panel-heading">
                <h3 class="panel-title"><b>STEP 1</b>: Choose an Image</h3>
            </div>
            <div class="panel-body">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="#" class="thumbnail" id="previewContainer">
                        <img src="./img/default.jpg" alt="" id="preview" crossorigin="anonymous">
                    </a>
                </div>
                <button class="btn btn-block btn-facebook" onclick="GetUserProfile()">
                    <i class="fa fa-facebook-f"></i> Use Facebook Profile
                </button>
                <fieldset class="title">
                    <legend>or</legend>
                </fieldset>
                <button class="btn btn-block btn-primary" id="pickImage">
                    <i class="fa fa-picture-o"></i> Choose an Image</button>
                <input type="file" name="file" id="file" accept="image/*" capture="camera" style="display:none">
            </div>
        </div>
    </div>
