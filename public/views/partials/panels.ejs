    <div class="col-lg-4 col-md-4 col-xs-12 col-sm-4" id="step3">
        <div class="panel panel-default card">
            <div class="panel-heading">
                <h3 class="panel-title"><b>STEP 2</b>: Personal Info</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" id="userName" value="" onkeyup="setName(this.value)">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Occupation / Title" id="userTitle" value="" onkeyup="setTitle(this.value)">
                </div>
