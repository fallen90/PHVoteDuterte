                <canvas id="c" width="540" height="540" style="transform:scale(0.75);margin:-14%;border: 1px solid rgb(170, 170, 170);-webkit-user-select: none; cursor: default;"></canvas>
                <div class="form-group">
                    <label class="control-label">Move</label>
                    <input type="range" min="0" max="0" step="0.5" onchange="movePicture(this.value)" class="flipped form-control">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" onchange="flip()"> <b>Flipped</b>
                    </label>
                </div>
                <button type="button" id="downloadImage" class="btn btn-block btn-primary" onclick="DownloadImage()">Download</button>
